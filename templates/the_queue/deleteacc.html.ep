% layout 'default';

<form method="POST" class="box">
  <div class="field">
    %= label_for confirmation => 'IF you are sure you want to delete your account, type "YES" in the text field and submit', class => 'label'
    %= text_field 'confirmation', id => 'confirmation', class => 'input'
  </div>
  <div class="field">
    %= submit_button 'Delete account', class => 'button is-link'
  </div>
</form>
