% layout 'default';

<form method="POST" class="box">
  <div class="field">
    %= label_for username => 'Username', class => 'label'
    %= text_field 'username', id => 'username', class => 'input'
  </div>
  <div class="field">
    %= label_for password => 'Password', class => 'label'
    %= password_field 'password', id => 'password', class => 'input'
  </div>
  <div class="field">
    %= submit_button 'Login', class => 'button is-link'
  </div>
</form>
